<h1>New video</h1>

<% form_for(@video, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <%= render :partial=>f %>
  <p>
    <%= f.label :asset %><br />
    <%= f.file_field :asset %>
  </p>
  <p>
    <%= f.label :import %><br />
    <%= f.select :import, @importable,{:include_blank => true} %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
  <p><em>Large files may time out while the thumbnailing process is still going on.</em></p>
<% end %>

<%= link_to 'Back', videos_path %>